{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "lib": ["es2018", "dom"],
    "importHelpers": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib", "esm", "tests"]
}
